package com.cathacks2016.proxy;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

import javax.net.ServerSocketFactory;
import javax.net.ssl.SSLServerSocketFactory;

private class ServerConnectionListener implements Runnable{

	private ServerSocket server_socket;

	public ServerConnectionListener() throws IOException{
		ServerSocketFactory ssocketFactory = SSLServerSocketFactory.getDefault();
	    server_socket = ssocketFactory.createServerSocket(ProxyServer.PROXY_SERVER_PORT);
	}
	
	@Override
	public void run() {
		while( true ){
			try {
				Socket new_connection = server_socket.accept();
				
				
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
	
}