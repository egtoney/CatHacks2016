package com.cathacks2016.proxy;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.HashMap;

import javax.net.ServerSocketFactory;
import javax.net.ssl.SSLServerSocketFactory;

class ServerConnectionListener extends Thread{

	private ServerSocket server_socket;
	private final HashMap< String, Socket > socket_map;

	public ServerConnectionListener( HashMap<String, Socket> socket_map ) throws IOException{
		ServerSocketFactory ssocketFactory = SSLServerSocketFactory.getDefault();
	    server_socket = ssocketFactory.createServerSocket(Runner.PROXY_SERVER_PORT);
	    this.socket_map = socket_map;
	}
	
	@Override
	public void run() {
		while( true ){
			try {
				Socket new_connection = server_socket.accept();
				
				
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
	
}